<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:layout_marginTop="20dp"
        android:defaultValue="@string/settings_order_by_list_default"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/settings_order_by_list_key"
        android:title="@string/settings_order_by_list_label" />
    <EditTextPreference
        android:layout_marginTop="20dp"
        android:defaultValue="@string/settings_search_query_default"
        android:inputType="textCapSentences"
        android:key="@string/settings_search_query_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:title="@string/settings_search_query_label" />

</PreferenceScreen>